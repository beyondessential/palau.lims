<div class="form-group form-inline"
     i18n:domain="palau.lims">

  <!-- Category -->
  <label for="category" class="field mr-2" i18n:translate="">Category</label>
  <select name="category" class="form-control form-control-sm mr-2">
    <option value="" selected disabled/>
    <tal:options repeat="category python:view.get_categories()">
      <option tal:attributes="value category"
              tal:content="category"/>
    </tal:options>
  </select>

</div>
