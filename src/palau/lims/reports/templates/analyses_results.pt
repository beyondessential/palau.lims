<tal:r i18n:domain="palau.lims"
  define="report_id string:analyses_results">

  <h2 i18n:translate="">
    Analyses results
  </h2>

  <form method="post">
    <p>Only analyses that have been published on the results reports.</p>

    <!-- Date control -->
    <tal:date replace="structure python:view.date_control()"/>

    <!-- Submit button -->
    <input tabindex=""
           class="searchButton allowMultiSubmit"
           type="submit"
           name="submit"
           value="Generate report"
           i18n:attributes="value"/>

    <!-- Hidden fields -->
    <input tal:replace="structure context/@@authenticator/authenticator"/>
    <input type="hidden" name="report_id" tal:attributes="value report_id"/>

  </form>

</tal:r>
