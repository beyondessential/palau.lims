<tal:sticker define="portal_state context/@@plone_portal_state;
                     portal_url portal_state/portal_url;
                     item python:view.current_item;
                     item_id item/getId;
                     hazardous item/getHazardous|nothing;">

  <!-- Barcode -->
  <div class="barcode"
       tal:attributes="data-id item_id;"
       data-code="code39"
       data-barHeight="14"
       data-addQuietZone="false"
       data-showHRI="false">
  </div>

  <!-- Some additional info about the item -->
  <div class="item-info">
    <table cellpadding="0" cellspacing="0" border="0">
      <tr>
        <td colspan="2">
          <span class="hazardous">
            <img tal:condition="hazardous"
                 tal:attributes="src string:${portal_url}/++resource++bika.lims.images/hazardous_big.png"/>
          </span>
          <strong tal:content="item_id">Item ID</strong>
        </td>
      </tr>
      <tr>
        <td colspan="2" class="patient_name"
            tal:define="patient python:item.PatientFullName or {};
                   firstname python:patient.get('firstname','');
                   lastname python:patient.get('lastname', '');
                   fullname python:filter(None, [firstname, lastname]);
                   fullname python: ' '.join(fullname);"
            tal:content="fullname">Patient name</td>
      </tr>
      <tr>
        <td colspan="2" tal:content="item/MedicalRecordNumber/value"></td>
      </tr>
      <tr>
        <td colspan="2" class="date_received"
            tal:define="received python:item.DateReceived;
                   received python:view.long_date(received) if received else '-- due --'"
            tal:content="received">Date received</td>
      </tr>
    </table>
  </div>

</tal:sticker>
